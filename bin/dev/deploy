#!/bin/bash

# Hacky wrapper script so I do not forget to update the jets remote gem

unset LOCAL_JETS_GEM
bundle update

os=`uname`
if [[ "$os" == 'Darwin' ]]; then
  time jets deploy # possibly using hacked local version of jets
else
  time bundle exec jets deploy # required to use bundle exec on the server we're rsyncing to for now
fi
